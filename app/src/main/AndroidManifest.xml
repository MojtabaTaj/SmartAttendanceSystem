<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sammay.loginactivity">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- devices that have nfc embedded in only otherwise android market incompatible -->

    <!--permissions to read anad write to sd card-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="true"
        android:excludeFromRecents="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginAccount">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Student_area" />
        <activity android:name=".RegisterAccount" />
        <activity android:name=".Add_student" />
        <activity android:name=".Lecturer_account" />
        <activity android:name=".Calendar" />
        <activity android:name=".Admin" />
        <activity android:name=".Add_Lecturer" />
        <activity android:name=".Add_lecturer"></activity>
    </application>

</manifest>